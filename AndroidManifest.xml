<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        android:versionName="@string/version"
        package="org.whiskeysierra.impairedvision">

    <application android:icon="@drawable/icon" android:label="Impaired Vision">
        <activity android:name="VisionActivity" android:label="Impaired Vision">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="AboutActivity" android:label="About"/>
        <activity android:name="SettingsActivity" android:label="Settings"/>
    </application>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.CAMERA"/>
</manifest>